{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": ["node_modules"],
  "files": [
    "./hardhat.config.ts",
    "./hardhat.network.ts",
    "./hardhat.accounts.ts",
    "./addresses.ts"
  ],
  "include": ["src/**/*", "tasks/**/*",  "deploy/**/*", "test/**/*", "utils/**/*"],
  "paths": {
    "@src/*": ["src/*"],
    "@utils/*": ["utils/*"],
    "@lib/*": ["utils/*"]
  }
}

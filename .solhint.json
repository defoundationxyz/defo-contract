{
  "extends": "solhint:recommended",
  "rules": {
    "code-complexity": [
      "error",
      8
    ],
    "compiler-version": [
      "error",
      ">=0.8.4"
    ],
    "const-name-snakecase": "off",
    "constructor-syntax": "error",
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "max-line-length": [
      "error",
      120
    ],
    "not-rely-on-time": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}
